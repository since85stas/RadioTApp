<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_podcastlist">

    <fragment
        android:id="@+id/navigation_home"
        android:name="stas.batura.radioproject.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_podcastlist"
        android:name="stas.batura.radioproject.ui.podcastlist.PodcastListFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_podcast_list" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="stas.batura.radioproject.ui.chat.ChatFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_chat" />
